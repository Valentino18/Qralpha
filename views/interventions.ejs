<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-
1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-primary text-uppercase">
        <div class="container">
            <h1 class="text-white">
                <%= title %>
            </h1>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded text-white" href="/">Home</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded text-white" href="/createqr">QRCode</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded text-white" href="/utilisateurs">Utilisateurs</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded text-white" href="/interventions">Interventions</a></li>           
                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead text-center">
        <div class="container d-flex align-items-center flex-column">
            <p></p>
        </div>
    </header>
    <div class="container-fluid align-items-center">
        <h1 style="margin-left: 50px;" class="cover-heading">Table du personnel</h1>
        <div class="container bg-light text-dark">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Salle</th>
                        <th>Date Previsionnelle</th> 
                        <th>Heure Previsionnelle</th>
                        <th>Heure d'Entr√©e</th>
                        <th>Heure de Fin</th>
                    </tr>
                </thead>
                <tbody>
                    <% interventions.forEach(function(entry) { %>
                        <tr>
                        <td><%= entry.codeIntervenant %></td>
                        <td><%= entry.salle %></td>
                        <td><%= new Date(entry.datePrevisionnelle).getUTCDate() + "/" + new Date(entry.datePrevisionnelle).getUTCMonth() + "/" + new Date(entry.datePrevisionnelle).getUTCFullYear()  %></td>
                        <td><%= new Date (entry.heurePrevisionnelle).getHours() + " Heures et" + new Date(entry.heurePrevisionnelle).getMinutes() + " Minutes" %></td>
                        <td><%= new Date(entry.heureEntree).getHours() + " Heures et "  +  new Date(entry.heureEntree).getMinutes() + " Minutes"%></td>
                        <td><%= new Date(entry.heureFin).getHours() + " Heures et "  +   new Date(entry.heureFin).getMinutes() + " Minutes"%></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>